@model ProfileListingProject.Web.Areas.Manager.Models.ProductFeatureUpdateModel
@{
    ViewData["Title"] = "Edit";
}

@section notification
{
    @await Html.PartialAsync("_Notification", Model.Notification)
}

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Edit a Product Feature</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" action="~/Manager/ProductFeature/Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" value="@Model.Id" name="Id" />
                    <div class="card-body">
                        <div class="form-group">
                            <label for="featureName">Name</label>
                            <input type="text" class="form-control" name="Name" id="featureName" placeholder="Enter name" value="@Model.Name">
                        </div>
                        <div class="form-group">
                            <label for="featureDescription">Description</label>
                            <input type="text" class="form-control" name="Description" id="featureDescription" placeholder="Enter name" value="@Model.Description">
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <!-- /.card -->

        </div>
        <!--/.col (left) -->
    </div>
</div>