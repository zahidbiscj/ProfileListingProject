@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <ul class="list-inline">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="list-inline-item">
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li class="list-inline-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link text-white btn-link">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="list-inline-item"><a href="/Account/Register" class="nav-link text-white" >Register</a></li>
            <li class="list-inline-item"><a href="/Account/Login" class="nav-link text-white">Login</a></li>
        }
    </ul>