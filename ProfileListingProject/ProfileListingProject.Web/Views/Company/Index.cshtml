@model ProfileListingProject.Core.Entities.Company
@{
    ViewData["Title"] = "Index";
}



<section id="content">
    <div class="container">

        <div class="row">
            <div class="span3">
                <h2>@Model.Name</h2>
            </div>
            <div class="span6">
                <img src="/img/slides/camera/slide1/screen.png" alt="" class="animated bounceInDown delay1" />
            </div>
            <div class="span3">
                <img src="/images/@Model.LogoImageUrl" alt="Company Logo @Model.LogoImageUrl"/>
            </div>
        </div>

        <div class="row">
            <div class="span12">
