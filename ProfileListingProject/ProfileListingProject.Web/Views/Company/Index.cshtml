                        <div class="row nomargin">
                            <div class="span8 ml-0">
                                <div class="navbar navbar-static-top">
                                    <div class="navigation">
                                        <nav>
                                            <ul class="nav topnav">
                                                <li class="active">
                                                    <a href="/Company/Index/@Model.Id"><i class="icon-home"></i> Info</a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="/Company/@Model.Id/Services">Services <i class="icon-angle-down"></i></a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="/Company/Products/@Model.Id">Products <i class="icon-angle-down"></i></a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="/Company/Projects/@Model.Id">Projects <i class="icon-angle-down"></i></a>
                                                </li>
                                                <li>
                                                    <a href="contact.html">Contact </a>
                                                </li>
                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>


        <div class="row">
            <div class="span4">
                <article>
                    <h1>Summary</h1>
                    <hr>
                    <p>lorem iosumdkasbd askjdasjdba dajsdb</p>
                </article>
            </div>
            <div class="span8">
                <aside class="right-sidebar align-right">
                    <h2> Techonologies</h2>
                    @*<h6>C#,Java , ASP.net Core , Sql server</h6>*@
                <ol>
                    @foreach (var item in Model.TechnologyInfos)
                    {

                        <li>@item.Name</li>

                    }
                </ol>
                        <h2>Team</h2>
                        <h6>Developer : 20</h6>
                        <h6>UX designer : 5</h6>
                        <h6>Other Staff : 5</h6>
                    </aside>
            </div>
        </div>
    </div>
